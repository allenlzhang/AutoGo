<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ConstraintLayoutCommon">
            <item name="layout_constraintStart_toStartOf">parent</item>
            <item name="layout_constraintEnd_toEndOf">parent</item>
            <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="usercenter_edit1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">9dip</item>
        <item name="android:paddingRight">9dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
        <item name="android:layout_marginBottom">22dip</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
    </style>

</resources>
