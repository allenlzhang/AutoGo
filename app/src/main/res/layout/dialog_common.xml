<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/common_dialog_bg"
              android:orientation="vertical" >

    <!-- 内容部分 -->

    <RelativeLayout
        android:id="@+id/dialog_notitle_lay_content"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:visibility="visible"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:gravity="center_horizontal"
            android:text="内容2"
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:id="@+id/dialog_notitle_lay_bottom"

        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:visibility="visible" >

        <View
            android:id="@+id/line_v"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#d6d6d6" />

        <TextView
            android:id="@+id/tvDialogLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/line_v"
            android:gravity="center"
            android:text="左侧按钮"
            android:textColor="@color/colorLoginCommitBgPress"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tvDialogRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/line_v"
            android:gravity="center"
            android:text="右侧按钮"
            android:textColor="@color/colorLoginCommitBgPress"
            android:textSize="16dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDialogOneBtn"
        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:gravity="center"
        android:text="只有一个按钮"
        android:textColor="@color/colorLoginCommitBgPress"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>