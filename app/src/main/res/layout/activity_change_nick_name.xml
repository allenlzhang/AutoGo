<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.user.ChangeNickNameActivity"
    android:background="@color/layout_background"
    >

    <EditText
        android:id="@+id/ed_nick_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/EdCommonLoginAndRegister"
        android:background="@color/colorWhite"
        android:hint="请输入昵称"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/btn_nick_commit"
        android:layout_below="@+id/ed_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BtnCommonCommit"
        android:text="确定修改"
        android:layout_marginTop="80dp"
        android:textSize="18dp"

        />
</RelativeLayout>