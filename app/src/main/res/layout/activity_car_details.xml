<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/BaseOneLineLinerStyle"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                style="@style/BaseOneLineTxtLeftStyle"
                android:text="车型"/>

            <TextView
                android:id="@+id/tvDetailsModel"
                style="@style/BaseOneLineTxtRightStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llDetailsBuyTime"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="购车时间"/>

                <TextView
                    android:id="@+id/tvDetailsBuyTime"
                    style="@style/BaseOneLineTxtRightIncludeArrowStyle"/>
            </LinearLayout>

            <View style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsServiceCycle"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="上次保养里程"/>

                <TextView
                    android:id="@+id/tvDetailsServiceCycle"
                    style="@style/BaseOneLineTxtRightIncludeArrowStyle"/>
            </LinearLayout>

            <View style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsServiceTime"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="上次保养时间"/>

                <TextView
                    android:id="@+id/tvDetailsServiceTime"
                    style="@style/BaseOneLineTxtRightIncludeArrowStyle"/>
            </LinearLayout>

            <View style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsInsureTime"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="上次投保时间"/>

                <TextView
                    android:id="@+id/tvDetailsInsureTime"
                    style="@style/BaseOneLineTxtRightIncludeArrowStyle"/>
            </LinearLayout>

            <View style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsAnnualTime"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="上次年检时间"/>

                <TextView
                    android:id="@+id/tvDetailsAnnualTime"
                    style="@style/BaseOneLineTxtRightIncludeArrowStyle"/>
            </LinearLayout>

            <View
                android:id="@+id/line1"
                style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsAuthStart"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="授权开始时间"/>

                <TextView
                    android:id="@+id/tvDetailsAuthStartTime"
                    style="@style/BaseOneLineTxtRightStyle"/>
            </LinearLayout>

            <View
                android:id="@+id/authLine"
                style="@style/BaseHorizontalLineStyle"/>

            <LinearLayout
                android:id="@+id/llDetailsAuthEnd"
                style="@style/BaseOneLineLinerStyle">

                <TextView
                    style="@style/BaseOneLineTxtLeftStyle"
                    android:text="授权结束时间"/>

                <TextView
                    android:id="@+id/tvDetailsAuthEndTime"
                    style="@style/BaseOneLineTxtRightStyle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDetailsDevice"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:text="设备"
                android:textColor="@color/textColorGray1"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/llDetailsRemote"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDetailsRemoteState"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_remote_activate_big"
                        />

                    <TextView
                        android:id="@+id/tvDetailsRemote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="远程模块"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/tvDetailsRemoteState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="未激活"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/sp_14"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDetailsRecorder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDetailsRecorderState"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_recorder_big"
                        />

                    <TextView
                        android:id="@+id/tvDetailsRecorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="行车记录仪"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/tvDetailsRecorderState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="未激活"
                        android:textColor="@color/textColorGray"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDetailsMachine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDetailsMachineState"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@mipmap/ic_car_machine_big"
                        />

                    <TextView
                        android:id="@+id/tvDetailsMachine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="智能车机"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/sp_14"/>

                    <TextView
                        android:id="@+id/tvDetailsMachineState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="未激活"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/sp_14"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnCancelAuth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/auth_refuse_bg_shape"
            android:textColor="@color/colorWhite"
            android:text="取消授权"/>
    </LinearLayout>
</ScrollView>
