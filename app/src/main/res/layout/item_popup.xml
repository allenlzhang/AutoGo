<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_ll"
    android:background="#ECF5FF"
    >
    <View
        android:id="@+id/item_popup_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorGray"
        />
    <TextView
        android:id="@+id/item_popup_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:gravity="center_vertical"
        android:textColor="#4e5a73"
        android:textSize="@dimen/sp_12"
        android:paddingLeft="24dp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/item_popup_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorGray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/item_popup_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#4e5a73"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="24dp"
            />
        <View
            android:id="@+id/item_popup_selected_line"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorLoginCommitBgPress"
            />

    </RelativeLayout>

</LinearLayout>
