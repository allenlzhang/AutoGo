<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRegistBg"
    android:orientation="vertical"
    tools:context=".view.activity.more.safety.FaceRecognitionSettingActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@mipmap/iv_face_def"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:gravity="center_horizontal"
        android:text="账号更安全"
        android:textColor="@color/colorEdtext"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="人脸识别登录、人脸识别身份认证"
        android:textColor="@color/textColorGray"
        android:textSize="13dp"/>

    <Button
        android:id="@+id/btnSetFace"
        style="@style/BtnCommonCommit"
        android:layout_marginTop="60dp"
        android:text="立即设置"
        android:textSize="20dp"/>
</LinearLayout>