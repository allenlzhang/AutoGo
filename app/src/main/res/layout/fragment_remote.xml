<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <include
        android:id="@+id/remote_title"
        layout="@layout/layout_base_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListRemote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/remote_title"
        >

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/remote_rl_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc222222"
        android:clickable="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/remote_iv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/iv_lock"
            />
        <Button
            android:id="@+id/remote_btn_lock"
            android:layout_width="119dp"
            android:layout_height="30dp"
            android:text="立即成为车主"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/remote_iv_lock"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_blue"
            />
    </RelativeLayout>

</RelativeLayout>