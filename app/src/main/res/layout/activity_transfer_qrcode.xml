<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".view.activity.more.transfer.AuthQRCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcode_bg"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/layout_background"
            android:gravity="center"
            android:text="车辆过户"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tvRefreshCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivQRCode"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/ic_code_refresh"
            android:drawablePadding="8dp"
            android:text="请点击刷新二维码"
            android:textColor="@color/textColorGray"
            android:textSize="14dp"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvRefreshCode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_dash_line"/>

        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/line"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableRight="@mipmap/ic_arrow_right_normal"
            android:gravity="center"
            android:text="车辆"
            android:textColor="@color/colorForgotPasswd"
            android:textSize="14dp"/>


    </RelativeLayout>


</LinearLayout>