<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@mipmap/iv_remote_door_win_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/car_door_unlock_selector"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="车门解锁"
                android:textColor="@color/textColorGray"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/car_door_lock_selector"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="车门落锁"
                android:textColor="@color/textColorGray"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/car_win_down_selector"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="降下车窗"
                android:textColor="@color/textColorGray"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/car_win_up_selector"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="升起车窗"
                android:textColor="@color/textColorGray"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="3dp"
        android:src="@drawable/remote_close_selector"/>
</RelativeLayout>